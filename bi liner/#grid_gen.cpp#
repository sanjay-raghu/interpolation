i#include <iostream>
#include "functions.h"
using namespace std;

void grid_gen(double x1,double y1,double x2,double y2,double nx,double ny,double **x,double **y,double **value)
{
  int hx,hy;
  hx=(x2-x1)/nx;
  hy=(y2-y1)/ny;
  for(int i=0;i<nx+1;i++)
  {
    for(int j=0;j<ny+1;j++)
    {
      x[i][j] = x1 + i*hx ;
      y[i][j] = y1+j*hy ;
      value[i][j] = get_value(x[i][j],y[i][j]);
      
    }
  }

};
